{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "tomwalsh96/portfolio-frontend",
      "hostname": "frontend",
      "essential": true,
      "environment": [
        {
          "name": "API_BASE_URL",
          "value": "http://backend:8080"
        }
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["backend"],
      "memory": 300
    },
    {
      "name": "backend",
      "image": "tomwalsh96/portfolio-backend",
      "hostname": "backend",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ],
      "memory": 300
    }
  ]
}