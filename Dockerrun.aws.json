{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "tomwalsh96/portfolio-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["frontend", "backend"],
      "memory": 100
    },
    {
      "name": "frontend",
      "image": "tomwalsh96/portfolio-frontend",
      "hostname": "frontend",
      "essential": false,
      "memory": 300
    },
    {
      "name": "backend",
      "image": "tomwalsh96/portfolio-backend",
      "hostname": "backend",
      "essential": false,
      "memory": 300,
      "portMappings": [
        {
          "hostPort": 587,
          "containerPort": 587
        }
      ]
    }
  ]
}